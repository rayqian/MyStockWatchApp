<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <TextView
        android:id="@+id/stock_symbol"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/stock_symbol"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="140dp"
        android:text="@string/price"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stock_symbol" />

    <TextView
        android:id="@+id/price_change"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:text="@string/price_change"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/price" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="157dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="@string/company_name"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/stock_symbol"
        app:layout_constraintTop_toBottomOf="@+id/stock_symbol" />
</androidx.constraintlayout.widget.ConstraintLayout>